    </main>
    <Quiz.Shared.Footer />
    <script>
        // Pricing data
        const pricingData = {
            monthly: {
                pro: 59000,
                premium: 79000
            },
            sixmonths: {
                pro: 269000,
                premium: 369000
            }
        };

        let currentBilling = 'monthly';

        // Format price function
        function formatPrice(price) {
            return price.toLocaleString('vi-VN');
        }

        // Toggle billing period
        function toggleBilling(period) {
            currentBilling = period;
            
            // Update toggle buttons
            const toggleButtons = document.querySelectorAll('.toggle-option');
            toggleButtons.forEach(btn => btn.classList.remove('active'));
            
            if (period === 'monthly') {
                toggleButtons[0].classList.add('active');
            } else {
                toggleButtons[1].classList.add('active');
            }
            
            // Update prices with animation
            updatePrices(period);
        }

        function updatePrices(period) {
            const proPrice = document.getElementById('pro-price');
            const premiumPrice = document.getElementById('premium-price');
            const proCurrency = document.getElementById('pro-currency');
            const premiumCurrency = document.getElementById('premium-currency');
            const salePrice = document.getElementById('sale-price')

            // Fade out
            proPrice.style.opacity = '0';
            premiumPrice.style.opacity = '0';
            proCurrency.style.opacity = '0';
            premiumCurrency.style.opacity = '0';
            salePrice.style.opacity ='0';

            setTimeout(() => {
                // Update giá
                proPrice.textContent = formatPrice(pricingData[period].pro);
                premiumPrice.textContent = formatPrice(pricingData[period].premium);

                // Update đơn vị
                if (period === 'monthly') {
                    proCurrency.textContent = "VNĐ/tháng";
                    premiumCurrency.textContent = "VNĐ/tháng";
                } else {
                    proCurrency.textContent = "VNĐ/6 tháng";
                    premiumCurrency.textContent = "VNĐ/6 tháng";
                    salePrice.textContent= "jjj";
                }

                // Fade in + animation
                proPrice.style.opacity = '1';
                premiumPrice.style.opacity = '1';
                proCurrency.style.opacity = '1';
                premiumCurrency.style.opacity = '1';
                
                proPrice.style.transform = 'scale(1.1)';
                premiumPrice.style.transform = 'scale(1.1)';

                setTimeout(() => {
                    proPrice.style.transform = 'scale(1)';
                    premiumPrice.style.transform = 'scale(1)';
                }, 200);
            }, 150);
        }

        function selectPlan(plan) {
            const period = currentBilling;
            const price = pricingData[period][plan];
            
            console.log(`Selected plan: ${plan}`);
            console.log(`Billing period: ${period}`);
            console.log(`Giá: ${price.toLocaleString('vi-VN')} VNĐ`);

            // Xác định đơn vị hiển thị
            const unit = period === 'monthly' ? '/tháng' : '/6 tháng';
            const periodText = period === 'monthly' ? '1 tháng' : '6 tháng';

         

         
                 window.location.href = "/price";
          
        }

        // Initialize pricing on page load
        document.addEventListener('DOMContentLoaded', function() {
            // Add smooth transitions
            const priceElements = document.querySelectorAll('#pro-price, #premium-price, #pro-currency, #premium-currency','#sale-price');
            priceElements.forEach(element => {
                element.style.transition = 'opacity 0.3s ease, transform 0.3s ease';
            });
            
            // Add hover effects to cards
            const cards = document.querySelectorAll('.pricing-card');
            cards.forEach(card => {
                card.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-5px)';
                    this.style.zIndex = '10';
                });
                
                card.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0)';
                    if (this.classList.contains('premium')) {
                        this.style.zIndex = '2';
                    } else {
                        this.style.zIndex = '1';
                    }
                });
            });
            
            // Add ripple effect to buttons
            const buttons = document.querySelectorAll('.cta-button');
            buttons.forEach(button => {
                button.addEventListener('click', function(e) {
                    const ripple = document.createElement('span');
                    const rect = this.getBoundingClientRect();
                    const size = Math.max(rect.width, rect.height);
                    const x = e.clientX - rect.left - size / 2;
                    const y = e.clientY - rect.top - size / 2;
                    
                    ripple.style.cssText = `
                        position: absolute;
                        width: ${size}px;
                        height: ${size}px;
                        left: ${x}px;
                        top: ${y}px;
                        background: rgba(255, 255, 255, 0.3);
                        border-radius: 50%;
                        transform: scale(0);
                        animation: ripple 0.6s linear;
                        pointer-events: none;
                    `;
                    
                    this.style.position = 'relative';
                    this.style.overflow = 'hidden';
                    this.appendChild(ripple);
                    
                    setTimeout(() => {
                        ripple.remove();
                    }, 600);
                });
            });
        });
    </script>
</body>
