@page "/flashcard-practice"
@inject NavigationManager Navigation

<link href="https://fonts.googleapis.com/css2?family=Baloo+2:wght@400;600;700;800&display=swap" rel="stylesheet">

<div class="flashcard-practice-container">
    <div class="container">
        <h1 class="page-title">Thư viện bài học</h1>

        <!-- Tabs -->
        <div class="tabs">
            <button class="tab">Upload tài liệu</button>
            <button class="tab">Tạo Quiz</button>
            <button class="tab active">Ôn tập</button>
        </div>

        <h2 class="section-title">Ôn tập - Flashcard</h2>

        <!-- Flashcard Viewer -->
        <div class="flashcard-viewer">
            <div class="flashcard-card" @onclick="FlipCard">
                <div class="flashcard-content @(isFlipped ? "flipped" : "")">
                    <div class="flashcard-front">
                        <div class="card-text">@GetCurrentTerm()</div>
                    </div>
                    <div class="flashcard-back">
                        <div class="card-text">@GetCurrentDefinition()</div>
                    </div>
                </div>
            </div>

            <!-- Progress Counter -->
            <div class="flashcard-progress">
                @(currentIndex + 1)/@flashcards.Count
            </div>

            <!-- Navigation Buttons -->
            <div class="flashcard-nav">
                <button class="btn-nav btn-prev" @onclick="PreviousCard" disabled="@(currentIndex == 0)">
                    <span>‹</span>
                </button>
                <button class="btn-nav btn-next" @onclick="NextCard" disabled="@(currentIndex >= flashcards.Count - 1)">
                    <span>›</span>
                </button>
            </div>
        </div>

        <!-- Scroll Down Indicator -->
        <div class="scroll-indicator">
            <span>⌄</span>
            <p>Kéo xuống để xem tất cả</p>
        </div>

        <!-- List View Section -->
        <div class="list-view-section">
            <div class="list-header">
                <h3>Xem trước bài ôn tập</h3>
                <span class="list-count">Số lượng câu hỏi ôn tập: @flashcards.Count</span>
            </div>

            <div class="flashcards-list">
                @foreach (var (card, index) in flashcards.Select((c, i) => (c, i)))
                {
                    <div class="flashcard-list-item">
                        <div class="list-item-content">
                            <div class="list-item-term">
                                @card.Term
                            </div>
                            <div class="list-item-definition">
                                <div class="definition-options">
                                    @foreach (var option in card.Options)
                                    {
                                        <div class="option-item">@option</div>
                                    }
                                </div>
                                <div class="correct-answer">Đáp án: @card.CorrectAnswer</div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Practice Button -->
            <div class="practice-button-container">
                <button class="btn-practice" @onclick="StartPractice">
                    Ôn tập Flashcard
                </button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public int setQuizId { get; set; }

    private int currentIndex = 0;
    private bool isFlipped = false;
    private List<FlashcardItem> flashcards = new List<FlashcardItem>();

    protected override void OnInitialized()
    {
        // Sample data
        flashcards = new List<FlashcardItem>
        {
            new FlashcardItem
            {
                Term = "Thuật ngữ",
                Definition = "Định nghĩa",
                Options = new List<string>
                {
                    "A. Technological",
                    "B. Disciplinary",
                    "C. Political",
                    "D. All the above"
                },
                CorrectAnswer = "D"
            },
            new FlashcardItem
            {
                Term = "The key influences on the development of the media and communication research field then can be identified and summarised as ______?",
                Definition = "All the above",
                Options = new List<string>
                {
                    "A. Technological",
                    "B. Disciplinary",
                    "C. Political",
                    "D. All the above"
                },
                CorrectAnswer = "D"
            }
        };

        // Repeat for demo
        for (int i = 0; i < 10; i++)
        {
            flashcards.Add(flashcards[1]);
        }
    }

    public class FlashcardItem
    {
        public string Term { get; set; }
        public string Definition { get; set; }
        public List<string> Options { get; set; } = new List<string>();
        public string CorrectAnswer { get; set; }
    }

    private string GetCurrentTerm()
    {
        return currentIndex < flashcards.Count ? flashcards[currentIndex].Term : "";
    }

    private string GetCurrentDefinition()
    {
        return currentIndex < flashcards.Count ? flashcards[currentIndex].Definition : "";
    }

    private void FlipCard()
    {
        isFlipped = !isFlipped;
    }

    private void NextCard()
    {
        if (currentIndex < flashcards.Count - 1)
        {
            currentIndex++;
            isFlipped = false;
        }
    }

    private void PreviousCard()
    {
        if (currentIndex > 0)
        {
            currentIndex--;
            isFlipped = false;
        }
    }

    private void StartPractice()
    {
        // Logic to start practice mode
        Console.WriteLine("Start practice mode");
    }
}

<style>
    @@import url('https://fonts.googleapis.com/css2?family=Baloo+2:wght@400;500;600;700;800&display=swap');

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Baloo 2', cursive;
        background: #ffffff;
    }

    .flashcard-practice-container {
        min-height: 100vh;
        padding: 40px 20px;
        background: #ffffff;
    }

    .container {
        max-width: 900px;
        margin: 0 auto;
    }

    /* Page Title */
    .page-title {
        font-size: 32px;
        font-weight: 800;
        color: #4318FF;
        margin-bottom: 20px;
    }

    /* Tabs */
    .tabs {
        display: flex;
        gap: 5px;
        border-bottom: 2px solid #e8e8e8;
        margin-bottom: 30px;
    }

    .tab {
        background: transparent;
        border: none;
        padding: 12px 20px;
        font-size: 16px;
        font-weight: 600;
        color: #718096;
        cursor: pointer;
        position: relative;
        font-family: 'Baloo 2', cursive;
        transition: color 0.3s;
    }

    .tab:hover {
        color: #4318FF;
    }

    .tab.active {
        color: #4318FF;
    }

    .tab.active::after {
        content: '';
        position: absolute;
        bottom: -2px;
        left: 0;
        right: 0;
        height: 3px;
        background: #4318FF;
    }

    /* Section Title */
    .section-title {
        font-size: 20px;
        font-weight: 700;
        color: #2D3748;
        margin-bottom: 30px;
    }

    /* Flashcard Viewer */
    .flashcard-viewer {
        margin-bottom: 60px;
    }

    .flashcard-card {
        width: 100%;
        height: 400px;
        perspective: 1000px;
        cursor: pointer;
        margin-bottom: 20px;
    }

    .flashcard-content {
        position: relative;
        width: 100%;
        height: 100%;
        transition: transform 0.6s;
        transform-style: preserve-3d;
    }

    .flashcard-content.flipped {
        transform: rotateY(180deg);
    }

    .flashcard-front,
    .flashcard-back {
        position: absolute;
        width: 100%;
        height: 100%;
        backface-visibility: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 20px;
        background: linear-gradient(135deg, #E9E3FF 0%, #D5CEFD 100%);
        padding: 40px;
    }

    .flashcard-back {
        transform: rotateY(180deg);
        background: linear-gradient(135deg, #C4B5FD 0%, #A78BFA 100%);
    }

    .card-text {
        font-size: 32px;
        font-weight: 700;
        color: #2D1B69;
        text-align: center;
        word-wrap: break-word;
    }

    .flashcard-back .card-text {
        color: #1D059D;
    }

    /* Progress Counter */
    .flashcard-progress {
        text-align: center;
        font-size: 24px;
        font-weight: 700;
        color: #4318FF;
        margin-bottom: 20px;
    }

    /* Navigation Buttons */
    .flashcard-nav {
        display: flex;
        justify-content: center;
        gap: 20px;
    }

    .btn-nav {
        background: #9F7AEA;
        color: white;
        border: none;
        width: 60px;
        height: 60px;
        border-radius: 50%;
        font-size: 32px;
        cursor: pointer;
        transition: all 0.3s;
        display: flex;
        align-items: center;
        justify-content: center;
        font-family: 'Baloo 2', cursive;
    }

    .btn-nav:hover:not(:disabled) {
        background: #805AD5;
        transform: scale(1.1);
    }

    .btn-nav:disabled {
        background: #CBD5E0;
        cursor: not-allowed;
        opacity: 0.5;
    }

    /* Scroll Indicator */
    .scroll-indicator {
        text-align: center;
        margin: 40px 0;
        color: #718096;
    }

    .scroll-indicator span {
        font-size: 48px;
        display: block;
        animation: bounce 2s infinite;
    }

    .scroll-indicator p {
        font-size: 16px;
        font-weight: 600;
        margin-top: 10px;
    }

    @@keyframes bounce {
        0%, 20%, 50%, 80%, 100% {
            transform: translateY(0);
        }
        40% {
            transform: translateY(-10px);
        }
        60% {
            transform: translateY(-5px);
        }
    }

    /* List View Section */
    .list-view-section {
        margin-top: 60px;
        padding-top: 40px;
        border-top: 3px solid #E9E3FF;
    }

    .list-header {
        margin-bottom: 30px;
    }

    .list-header h3 {
        font-size: 24px;
        font-weight: 700;
        color: #2D3748;
        margin-bottom: 10px;
    }

    .list-count {
        display: inline-block;
        background: #E9E3FF;
        color: #1D059D;
        padding: 8px 16px;
        border-radius: 8px;
        font-size: 14px;
        font-weight: 600;
    }

    /* Flashcards List */
    .flashcards-list {
        margin-bottom: 40px;
    }

    .flashcard-list-item {
        background: #E9E3FF;
        border-radius: 16px;
        margin-bottom: 20px;
        overflow: hidden;
        border: 3px solid #1D059D;
    }

    .list-item-content {
        display: grid;
        grid-template-columns: 1fr 1fr;
        min-height: 150px;
    }

    .list-item-term {
        background: #D5CEFD;
        padding: 25px;
        display: flex;
        align-items: center;
        font-size: 16px;
        font-weight: 600;
        color: #2D3748;
        border-right: 3px solid #1D059D;
    }

    .list-item-definition {
        padding: 25px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .definition-options {
        display: flex;
        flex-direction: column;
        gap: 8px;
        margin-bottom: 15px;
    }

    .option-item {
        font-size: 14px;
        color: #2D3748;
        font-weight: 500;
    }

    .correct-answer {
        font-size: 14px;
        color: #805AD5;
        font-weight: 700;
    }

    /* Practice Button */
    .practice-button-container {
        text-align: center;
        margin-top: 40px;
    }

    .btn-practice {
        background: linear-gradient(135deg, #E53E3E 0%, #FC8181 100%);
        color: white;
        border: none;
        padding: 16px 60px;
        border-radius: 12px;
        font-size: 18px;
        font-weight: 700;
        cursor: pointer;
        font-family: 'Baloo 2', cursive;
        transition: all 0.3s;
    }

    .btn-practice:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 25px rgba(229, 62, 62, 0.4);
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .flashcard-card {
            height: 300px;
        }

        .card-text {
            font-size: 24px;
        }

        .list-item-content {
            grid-template-columns: 1fr;
        }

        .list-item-term {
            border-right: none;
            border-bottom: 3px solid #1D059D;
        }

        .page-title {
            font-size: 24px;
        }

        .flashcard-practice-container {
            padding: 20px 15px;
        }
    }
</style>